@{
    Layout = "_Layout";
}

@using Crossout.Model.Items
@using Crossout.Web
@using Crossout.AspWeb.Models
@model Crossout.AspWeb.Models.General.WatchlistModel


<partial name="header" model="@Model" />
<partial name="status" model="@Model.Status" />


<div class="container-space">

    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center" style="margin-bottom: 20px;">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- Leaderboard -->
            <ins class="adsbygoogle"
                 style="display:inline-block;width:728px;height:90px"
                 data-ad-client="ca-pub-1215488197322962"
                 data-ad-slot="3124709022"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
    </div>

    <div class="panel panel-default">
        <table id="ItemTable" class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Rarity
                    </th>
                    <th>
                        Faction
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Type
                    </th>
                    <th class="text-right">
                        Popularity
                    </th>
                    <th class="text-right">
                        Sell Price
                    </th>
                    <th class="text-right">
                        Sell Offers
                    </th>
                    <th class="text-right">
                        Buy Price
                    </th>
                    <th class="text-right">
                        Buy Orders
                    </th>
                    <th class="text-right">
                        Margin
                    </th>
                    <th class="text-right">
                        Last Update
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (Item item in Model.Items)
                {
                    <partial name="itempart" model="@item" />
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.datatables.net/plug-ins/1.10.19/api/fnSortNeutral.js"></script>
<script src="~/scripts/internal/locationhash.js"></script>
<script src="~/scripts/internal/search.js"></script>
<script>
    $(document).ready(function () {
        var table = $('#ItemTable').dataTable();

        // Sort in the order that was originally in the HTML
        table.fnSortNeutral();
    });
</script>
