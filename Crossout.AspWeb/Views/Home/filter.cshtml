@using Crossout.Web
@using Crossout.Web.Models.Filter
@model Crossout.Web.Models.General.SearchModel

<div class="card my-1 px-1">

    <div class="d-flex justify-content-center my-1 row">
        <div class="btn-group-vertical btn-group-sm m-1 align-self-start col" role="group" aria-label="Faction Filter">
            @foreach (FilterItem item in Model.FilterModel.Factions)
            {
                <button class="btn btn-outline-secondary filter-faction" type="button">@item.Name</button>
            }
        </div>
        <div class="btn-group-vertical btn-group-sm m-1 align-self-start col" role="group" aria-label="Category Filter">
            @foreach (FilterItem item in Model.FilterModel.Categories)
            {
                <button class="btn btn-outline-secondary filter-category" type="button">@item.Name</button>
            }
        </div>
        <div class="btn-group-vertical btn-group-sm m-1 align-self-start col" role="group" aria-label="Rarity Filter">
            @foreach (FilterItem item in Model.FilterModel.Rarities)
            {
                <button class="btn btn-outline-secondary filter-rarity" type="button">@item.Name</button>
            }
        </div>
        <div class="btn-group-vertical btn-group-sm m-1 align-self-start col" role="group" aria-label="special filter">
            <a class="btn btn-outline-secondary @(Model.FilterModel.CurrentShowRemovedItems ? "active" : "")" href="~/search/@Model.UriRemovedItems(Model.FilterModel.CurrentShowRemovedItems)">Removed Items</a>
            <a class="btn btn-outline-secondary @(Model.FilterModel.CurrentShowMetaItems ? "active" : "")" href="~/search/@Model.UriMetaItems(Model.FilterModel.CurrentShowMetaItems)">Meta Items</a>
        </div>
    </div>

