@{
    Layout = "layout.cshtml";
}

@using Crossout.Model.Items
@using Crossout.Web
@using Crossout.Web.Models
@model Crossout.Web.Models.General.CraftingOverviewModel


@Html.Partial("header", Model)

@Html.Partial("status", Model.Status)



<div class="container-space">
    <div class="panel panel-default">
        <div class="panel-body">
            @Html.Partial("craftingfilter", Model)
        </div>
    </div>

    <div class="panel panel-default">
        <table id="ItemTable" class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Rarity
                    </th>
                    <th>
                        Faction
                    </th>
                    <th>
                        Category
                    </th>
                    <th class="text-right">
                        Popularity
                    </th>
                    <th class="text-right">
                        Sell Price
                    </th>
                    <th class="text-right">
                        Crafting Cost (Sell)
                    </th>
                    <th class="text-right">
                        Buy Price
                    </th>
                    <th class="text-right">
                        Crafting Cost (Buy)
                    </th>
                    <th class="text-right">
                        Crafting Margin
                    </th>
                    <th class="text-right">
                        Craft or Buy?
                    </th>
                    <th class="text-right">
                        Last Update
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (Item item in Model.Items)
                {
                    @Html.Partial("craftingitempart", item)
                }
            </tbody>
        </table>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            @Html.Partial("craftingfilter", Model)
        </div>
    </div>
</div>

<script src="~/Scripts/Internal/locationhash.js"></script>
<script src="~/Scripts/Internal/crafting.js"></script>
