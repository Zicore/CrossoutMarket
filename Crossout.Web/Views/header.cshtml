@using Crossout.Web
@using Crossout.Web.Helper
@using Crossout.Web.Models
@using Crossout.Web.Models.General
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Crossout.Web.Models.View.IViewTitle>
    
@{
    SearchModel m = Model as SearchModel;
}
<div class="navbar-inverse navbar-default navbar-static-top" role="navigation">
    <div class="container-fluid" style="padding: 0px">
        <div class="navbar-header" style="margin-right: 12px">
            <a class="navbar-left" rel="home" href="/"><img alt="CrossoutDB Logo" title="@ViewHelper.GenerateTitle(Model)" class="crossoutdb-logo" src="~/img/crossoutdb_logo.png" /></a>
        </div>

        <ul class="nav navbar-nav nav-pills">
            <li role="presentation" @(Model != null && Model.Title == "Crafting" ? "class=active" : "")><a class="navbar-left h4" style="margin: 0px;" href="~/crafting">Crafting</a></li>
            <li role="presentation" @(Model != null && Model.Title == "Packs" ? "class=active" : "")><a class="navbar-left h4" style="margin: 0px;" href="~/packs">Packs</a></li>
            <li role="presentation" @(Model != null && Model.Title == "Community Tools" ? "class=active" : "")><a class="navbar-left h4" style="margin: 0px;" href="~/tools">Community Tools</a></li>
            <li role="presentation" @(Model != null && Model.Title == "Changes" ? "class=active" : "")><a class="navbar-left h4" style="margin: 0px;" href="~/changes">Changes</a></li>
        </ul>

        <div class="navbar-right">
            <form class="navbar-form" action="/search/" role="search" method="get" id="form">
                <div class="input-group">
                    @if (m != null)
                    {
                        <input type="text" class="form-control" placeholder="Search" size="30" name="query" id="query" value="@m.CurrentQuery">
                    }
                    else
                    {
                        <input type="text" class="form-control" placeholder="Search" size="30" name="query" id="query" value="">
                    }

                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        <button class="btn btn-default" type="button" id="reset"><i class="glyphicon glyphicon-remove"></i></button>
                        @*<div class="btn btn-default"><a href="~/admin">Login</a></div>*@
                    </div>
                    @if (m != null)
                    {
                        <input type="hidden" name="rarity" value="@m.FilterModel.CurrentRarity.NameUri" />
                        <input type="hidden" name="category" value="@m.FilterModel.CurrentCategory.NameUri" />
                        <input type="hidden" name="faction" value="@m.FilterModel.CurrentFaction.NameUri" />
                    }
                </div>
            </form>
        </div>

    </div>
</div>